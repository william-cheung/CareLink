<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/view_editSystolic"
        style="@style/ExEditTextStyle" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_systolic_pressure"
            android:textSize="@dimen/ex_edit_text_discription_text_size" />

        <TextView
            android:id="@+id/textView_systolicPressure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="@string/value_place_holder"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_editDiastolic"
        style="@style/ExEditTextStyle" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_diastolic_pressure"
            android:textSize="@dimen/ex_edit_text_discription_text_size" />

        <TextView
            android:id="@+id/textView_diastolicPressure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="@string/value_place_holder"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_editHeartRate"
        style="@style/ExEditTextStyle" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_heart_rate"
            android:textSize="@dimen/ex_edit_text_discription_text_size" />

        <TextView
            android:id="@+id/textView_heartRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|right"
            android:text="@string/value_place_holder"
            android:textSize="18sp" />
    </LinearLayout>

    <include layout="@layout/record_date_layout" />

    <include layout="@layout/record_note_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button_ok"
        style="@style/ButtonStyle"
        android:layout_marginBottom="20dp"
        android:text="@string/text_ok" />

</LinearLayout>