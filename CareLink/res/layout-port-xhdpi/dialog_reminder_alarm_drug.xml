<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alert_dialog_p_width"
    android:layout_height="wrap_content"
    android:background="@color/default_background"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:padding="10dp"
        android:text="您该服药了"
        android:textColor="@color/theme"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@color/line_background" />

    <TextView
        android:id="@+id/textView_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:gravity="center|left"
        android:padding="10dp"
        android:text="甲苯磺丁脲啊啊啊啊啊   3 片"
        android:textColor="@color/theme"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_record"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_alert_dialog"
            android:layout_weight="1"
            android:background="@drawable/button_bg_selector_alert_dialog"
            android:gravity="center"
            android:text="@string/text_record"
            android:textSize="18sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button_close"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_alert_dialog"
            android:layout_weight="1"
            android:background="@drawable/button_bg_selector_alert_dialog"
            android:gravity="center"
            android:text="@string/text_close"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>