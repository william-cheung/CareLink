<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/record_options_item_bg_selector"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/record_option_item_height"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <ImageView
            android:id="@+id/imageView_optionIcon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/record_option_item_height"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/glucose" />

        <TextView
            android:id="@+id/textView_optionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@color/default_text_color"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView_navigation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/record_option_item_height"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/navigation" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dip"
        android:background="@color/seperator_color" />

</LinearLayout>