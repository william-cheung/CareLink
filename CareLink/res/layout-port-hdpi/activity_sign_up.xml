<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/sign_up_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:padding="8dp"
            android:text="@string/text_phone_woc"
            android:textColor="@color/default_text_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_bg_android_21"
            android:focusable="true"
            android:hint="@string/hint_input_phone_number"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="8dp"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="8dp"
            android:text="@string/text_captcha"
            android:textColor="@color/default_text_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_captcha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_bg_android_21"
            android:inputType="number"
            android:padding="8dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_getCaptcha"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:background="@drawable/button_bg_selector_get_captcha"
            android:padding="6dp"
            android:text="@string/get_captcha"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:padding="8dp"
            android:text="@string/text_passwd"
            android:textColor="@color/default_text_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_bg_android_21"
            android:focusable="true"
            android:hint="@string/hint_input_password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="8dp"
            android:text="@string/text_passwd_2nd"
            android:textColor="@color/default_text_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_retypePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_bg_android_21"
            android:hint="@string/hint_retype_password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:contentDescription="@null"
            android:src="@drawable/btn_check_to_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:text="@string/read_and_agree"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/textView_agreements"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="@string/register_agreements"
            android:textColor="@drawable/agreements_link_text_color_selector" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button_signUp"
        style="@style/ButtonStyle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/sign_up" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

</LinearLayout>