<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape>
                    <corners android:radius="0dp" />
                    <gradient android:angle="90" android:endColor="@color/theme" android:startColor="@color/theme" android:type="linear" />
                </shape></item>
            <item android:bottom="3dip">
                <shape>
                    <corners android:radius="0dp" />
                    <gradient android:angle="90" android:endColor="@color/white" android:startColor="@color/white" android:type="linear" />
                </shape>
               </item>
        </layer-list>
    </item>
</selector>